{
  "default": true,
  "line-length": {
    "line_length": 100,
    "code_blocks": false,
    "tables": false
  },
  "no-trailing-spaces": true,
  "no-hard-tabs": true,
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "ul-indent": {
    "indent": 2
  },
  "no-trailing-punctuation": {
    "punctuation": ".,;:!"
  },
  "ol-prefix": {
    "style": "ordered"
  },
  "no-inline-html": {
    "allowed_elements": ["br", "details", "summary"]
  },
  "hr-style": {
    "style": "---"
  },
  "no-emphasis-as-heading": false,
  "first-line-heading": false,
  "first-heading-h1": false,
  "proper-names": false
}